<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Project -->
        <record id="project_invoice_form_inherited" model="ir.ui.view">
            <field name="name">Inherit project form : Invoicing Data</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="hr_timesheet.project_invoice_form" />
            <field name="priority">24</field>
            <field name="arch" type="xml">
                <group name="ps_flags" position="inside">
                    <field name="overtime" string="Overtime Taken" />
                    <field name="overtime_hrs" string="Overtime hours" />
                </group>
                <field name="ps_date_range_type_id" position="before">
                    <field name="invoice_properties_invoice_mileage" invisible="True" />
                    <field
                        name="ps_mileage_product_id"
                        attrs="{'invisible': [('invoice_properties_invoice_mileage', '=', False)], 'required': [('invoice_properties_invoice_mileage', '=', True)]}"
                    />
                </field>
            </field>
        </record>
        <!-- Task -->
        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]</attribute>
                </field>
                <page name="description_page" position="before">
                    <page name="users" string="Fee Earners">
                        <group colspan="4" col="2">
                            <field
                                name="task_user_ids"
                                context="{'default_task_id':active_id}"
                            >
                                <tree
                                    string="Fee Earners"
                                    create="true"
                                    edit="true"
                                    delete="true"
                                    copy="false"
                                >
                                    <field name="user_id" />
                                    <field name="from_date" />
                                    <field name="product_id" />
                                    <field name="fee_rate" />
                                    <field name="ic_fee_rate" />
                                    <field name="margin" />
                                </tree>
                                <form string="Fee Earners">
                                    <group>
                                        <field name="user_id" invisible="0" />
                                        <!--<field name="user_ids" widget="many2many_tags"/>-->
                                        <field name="from_date" />
                                        <field name="product_id" />
                                        <field name="fee_rate" />
                                        <field name="ic_fee_rate" />
                                        <field name="cost_rate" />
                                        <field name="margin" />
                                    </group>
                                </form>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>
        <!-- ProjectInvoicingProperties -->
        <record model="ir.ui.view" id="project_invoicing_period_form_inherited">
            <field name="name">Invoicing Properties</field>
            <field name="model">project.invoicing.properties</field>
            <field
                name="inherit_id"
                ref="ps_project.project_invoicing_Period_form_view"
            />
            <field name="arch" type="xml">
                <field name="actual_costs" position="after">
                    <field name="invoice_mileage" />
                </field>
                <field name="specs_type" position="after">
                    <field name="group_by_fee_rate" />
                    <field name="group_by_month" />
                </field>
                <group position="after">
                    <group
                        name="invoice_line_grouping"
                        string="Invoice grouping"
                        attrs="{'invisible': [('fixed_amount', '=', True)]}"
                    >
                        <field name="group_invoice" />
                    </group>
                </group>
            </field>
        </record>
        <record id="edit_project_ps_timesheet_invoicing" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
                <xpath expr="//button[last()]" position="after">
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_view_invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            string="Invoices"
                        />
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
